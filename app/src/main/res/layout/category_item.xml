<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="cvm"
            type="com.android.e_commerce_app.ui.api.CategoryResponseItem" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/category_item"
            android:layout_width="98dp"
            android:layout_height="94dp"
            android:background="@color/white"
            app:cardCornerRadius="150dp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:LoadImage="@{cvm.url}"
                android:adjustViewBounds="true"

                />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/category_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@{cvm.name}"
            android:maxLines="2"
            android:singleLine="false"
            app:layout_constraintTop_toBottomOf="@id/category_item"
            app:layout_constraintStart_toStartOf="@id/category_item"
            app:layout_constraintEnd_toEndOf="@id/category_item"
            android:textColor="@color/black"
            android:textStyle="bold"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>