<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemDesign"
            type="com.android.e_commerce_app.ui.api.ProductsItem" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            >

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:LoadImage="@{itemDesign.images[0]}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/imageName"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="@{itemDesign.title}"
                android:textSize="25sp"
                android:maxLines="2"
                android:singleLine="false"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/product_image"
              />

            <TextView
                android:id="@+id/EGP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/imageName"
                app:layout_constraintStart_toEndOf="@id/product_image"
                android:text="@string/egp"
                android:textSize="20sp"
                android:layout_margin="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/EGP"
                app:layout_constraintTop_toBottomOf="@id/imageName"
                android:text="@{itemDesign.price.toString()}"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textStyle="bold" />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>